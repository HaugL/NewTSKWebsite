<!DOCTYPE html>
<html>
	<head>
	  <title>Tsk</title>
	  <%= stylesheet_link_tag    "application", :media => "all" %>
	    <%= stylesheet_link_tag 'formtastic', 'my_formtastic_changes' %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
	</head>
	<body>
		<div class = 'header-container'>
			<div class = 'header-links'>
				<%= link_to 'Products', root_path %>
				<%= link_to 'Orders', orders_path %>
				<% if member_signed_in? && (current_member.has_role? :admin) %>
					<%= link_to 'Admin Dashboard', admin_dashboard_path %>
				<% end %>
			</div>
			<div class = 'header-login'>
				<% if not member_signed_in? %>
					<%= link_to 'Log-In', new_member_session_path %>
				<% else %>
					<%= link_to 'Log-Out',  destroy_member_session_path, :method => :delete %>
				<% end %>
			</div>
		</div>
		<div class = 'container'>
		<%= yield %>
		</div>
	</body>
</html>
