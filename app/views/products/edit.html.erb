<div class = 'form-container'>
	<div class = 'title'>Create a Product</div>
	 <%= semantic_form_for @product, :html => {:multipart => true} do |f| %>
	    <%= f.inputs do %>
	      <%= f.input :name, :required => true%>
	      <%= f.input :category_id, :as => :select, :collection => Category.all, :required => true %>
		  <%= f.input :unit, :hint => "25 lbs Bag" %>
		  <%= f.input :price, :as => :string, :hint => "The price per unit ( ex. 4.25 )" %>
	      <%= f.file_field :image, :label => "Picture" %>
	      <br><br><br>
	    <% end %>
	    <%= f.actions do %>
	      <%= f.action :submit, :as => :button %>
	    <% end %>
	  <% end %>
</div>
